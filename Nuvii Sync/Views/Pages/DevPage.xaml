<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Nuvii_Sync.Views.Pages.DevPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Nuvii Sync - Proveedor de Archivos en la Nube"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,24"/>

        <!-- Server Folder -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Carpeta del Servidor (Origen en la Nube):" Margin="0,0,0,4"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="ServerFolderTextBox"
                         PlaceholderText="Seleccionar carpeta del servidor..."
                         IsReadOnly="True"/>
                <Button Grid.Column="1"
                        Content="Explorar..."
                        Click="BrowseServerFolder_Click"
                        Margin="8,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Client Folder -->
        <StackPanel Grid.Row="2" Margin="0,0,0,24">
            <TextBlock Text="Carpeta de Sincronización (Cliente):" Margin="0,0,0,4"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="ClientFolderTextBox"
                         PlaceholderText="Seleccionar carpeta de sincronización..."
                         IsReadOnly="True"/>
                <Button Grid.Column="1"
                        Content="Explorar..."
                        Click="BrowseClientFolder_Click"
                        Margin="8,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Spacing="12"
                    Margin="0,0,0,12">
            <Button x:Name="StartButton"
                    Content="Iniciar Sincronización"
                    Click="StartSync_Click"
                    Style="{StaticResource AccentButtonStyle}"/>
            <Button x:Name="StopButton"
                    Content="Detener Sincronización"
                    Click="StopSync_Click"
                    IsEnabled="False"/>
            <Button x:Name="OpenFolderButton"
                    Content="Abrir Carpeta"
                    Click="OpenSyncFolder_Click"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Cleanup Section -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    Spacing="12"
                    Margin="0,0,0,12">
            <Button x:Name="CleanupButton"
                    Content="Desregistrar Sincronización"
                    Click="Cleanup_Click"
                    ToolTipService.ToolTip="Elimina la raíz de sincronización de la barra lateral del Explorador"/>
            <TextBlock Text="(Eliminar de la barra lateral)"
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="12"/>
        </StackPanel>

        <!-- Status -->
        <StackPanel Grid.Row="5" Margin="0,0,0,12">
            <TextBlock Text="Estado:" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusTextBlock"
                       Text="No está en ejecución"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Log Output -->
        <Border x:Name="LogSection"
                Grid.Row="6"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4">
            <ScrollViewer x:Name="LogScrollViewer" Padding="12">
                <TextBlock x:Name="LogTextBlock"
                           TextWrapping="Wrap"
                           FontFamily="Consolas"
                           FontSize="12"
                           IsTextSelectionEnabled="True"
                           Text="Listo. La raíz de sincronización permanecerá en el Explorador incluso cuando la aplicación esté cerrada.&#x0a;Usa 'Desregistrar Sincronización' para eliminarla de la barra lateral."/>
            </ScrollViewer>
        </Border>

        <!-- Copy Log Button -->
        <StackPanel x:Name="LogButtonsSection"
                    Grid.Row="7"
                    Orientation="Horizontal"
                    Spacing="12"
                    Margin="0,12,0,0">
            <Button x:Name="CopyLogButton"
                    Content="Copiar Registro"
                    Click="CopyLog_Click"/>
            <Button x:Name="ClearLogButton"
                    Content="Limpiar Registro"
                    Click="ClearLog_Click"/>
        </StackPanel>
    </Grid>
</Page>
