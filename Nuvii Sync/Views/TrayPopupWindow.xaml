<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Nuvii_Sync.Views.TrayPopupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nuvii_Sync.Views"
    xmlns:models="using:Nuvii_Sync.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Nuvii Sync">

    <Window.SystemBackdrop>
        <MicaBackdrop/>
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with status -->
        <Grid Grid.Row="0"
              Padding="16,16,16,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App icon and name -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="12">
                <Image Width="32"
                       Height="32"
                       Source="ms-appx:///Assets/NuviiLocalSync.ico"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Nuvii Sync"
                               FontWeight="SemiBold"
                               FontSize="14"/>
                    <StackPanel Orientation="Horizontal"
                                Spacing="6">
                        <FontIcon x:Name="StatusIconElement"
                                  FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xE930;"
                                  FontSize="12"
                                  Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                        <TextBlock x:Name="StatusTextElement"
                                   Text="Tus archivos están sincronizados"
                                   FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Settings button -->
            <Button Grid.Column="2"
                    x:Name="SettingsButton"
                    Click="SettingsButton_Click"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ToolTipService.ToolTip="Configuración">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                          Glyph="&#xE713;"
                          FontSize="16"/>
            </Button>
        </Grid>

        <!-- Recent activity list -->
        <Grid Grid.Row="1">
            <!-- Empty state -->
            <StackPanel x:Name="EmptyStatePanel"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Visible">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                          Glyph="&#xE8B7;"
                          FontSize="48"
                          Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Sin actividad reciente"
                           Margin="0,12,0,0"
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Activity list with scroll -->
            <ListView x:Name="ActivityListView"
                      Visibility="Collapsed"
                      SelectionMode="None"
                      IsItemClickEnabled="True"
                      ItemClick="ActivityListView_ItemClick"
                      Padding="4,0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch"/>
                        <Setter Property="Padding"
                                Value="0"/>
                        <Setter Property="Margin"
                                Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:SyncActivityItem">
                        <Grid Padding="12,10"
                              ColumnSpacing="12"
                              Opacity="{x:Bind TextOpacity}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Activity type icon -->
                            <FontIcon Grid.Column="0"
                                      FontFamily="{StaticResource SymbolThemeFontFamily}"
                                      Glyph="{x:Bind Icon}"
                                      FontSize="16"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      VerticalAlignment="Center"/>

                            <!-- File info -->
                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Spacing="2">
                                <TextBlock Text="{x:Bind FileName}"
                                           FontSize="13"
                                           TextTrimming="CharacterEllipsis"
                                           MaxLines="1"/>
                                <TextBlock FontSize="11"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="{x:Bind ActivityDescription}"/>
                                    <Run Text=" "/>
                                    <Run Text="{x:Bind FolderPath}"
                                         Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Time -->
                            <TextBlock Grid.Column="2"
                                       Text="{x:Bind FormattedTime}"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Bottom action bar -->
        <Border Grid.Row="2"
                BorderThickness="0,1,0,0"
                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                Padding="12">
            <StackPanel Spacing="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Open folder button -->
                    <Button Grid.Column="0"
                            x:Name="OpenFolderButton"
                            Click="OpenFolderButton_Click"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,4,0"
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                      Glyph="&#xE838;"
                                      FontSize="14"/>
                            <TextBlock Text="Abrir carpeta"
                                       FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <!-- View online button -->
                    <Button Grid.Column="1"
                            x:Name="ViewOnlineButton"
                            Click="ViewOnlineButton_Click"
                            HorizontalAlignment="Stretch"
                            Margin="4,0,0,0"
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                      Glyph="&#xE774;"
                                      FontSize="14"/>
                            <TextBlock Text="Ver en línea"
                                       FontSize="13"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Quit button -->
                <Button x:Name="QuitButton"
                        Click="QuitButton_Click"
                        HorizontalAlignment="Stretch"
                        Padding="12,8">
                    <StackPanel Orientation="Horizontal"
                                Spacing="8"
                                HorizontalAlignment="Center">
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xE7E8;"
                                  FontSize="14"/>
                        <TextBlock Text="Salir de Nuvii Sync"
                                   FontSize="13"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
