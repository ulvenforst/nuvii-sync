<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Nuvii_Sync.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Nuvii Sync - Configuración"
    >

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Title Bar -->
            <RowDefinition Height="Auto"/>
            <!-- App Content -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <TitleBar x:Name="AppTitleBar"
                  Title="Nuvii Sync"
                  Subtitle="Configuración">
            <TitleBar.IconSource>
                <ImageIconSource ImageSource="ms-appx:///Assets/NuviiLocalSync.ico"/>
            </TitleBar.IconSource>
        </TitleBar>

        <!-- Navigation Content -->
        <NavigationView
            x:Name="NavView"
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="False"
            PaneDisplayMode="Left"
            OpenPaneLength="250"
            IsSettingsVisible="False"
            SelectionChanged="NavView_SelectionChanged">

            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="SyncBackupNavItem"
                                    Content="Sincronización y Backup"
                                    Tag="SyncBackup">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE895;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Name="AccountNavItem"
                                    Content="Cuenta"
                                    Tag="Account">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE77B;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Name="DevNavItem"
                                    Content="Dev"
                                    Tag="Dev">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE943;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem x:Name="VersionNavItem"
                                    IsEnabled="False"
                                    SelectsOnInvoked="False">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE946;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>

            <NavigationView.Content>
                <Frame x:Name="ContentFrame" Padding="24"/>
            </NavigationView.Content>
        </NavigationView>
    </Grid>
</Window>
